
#include "STD_TYPES.h"
#include "BIT_MATH.h"
#include "TIMER_Regster.h"
#include "EXI_Regster.h"
#include "DIO_Interface.h"

void TIMER_VidEnable(void)
{
	//SELECT MODE
	CLR_BIT(TCCR0,3);
	CLR_BIT(TCCR0,6);
	//CLOCK SELECT PRESCALER
	CLR_BIT(TCCR0,0);
	CLR_BIT(TCCR0,1);
	SET_BIT(TCCR0,2);
	//ENABLE INTRRUPT
	SET_BIT(TIMSK,0);
	CLR_BIT(TIMSK,0);	
}


ISR(TIMER_VECT)
{
	u8 static counter =0;
	counter++;

	if(counter==123)
	{
		DIO_VidSetPinValue(PORTB,PIN7,1);
		DIO_VidSetPinValue(PORTB,PIN0,1);
		DIO_VidSetPinValue(PORTB,PIN1,1);
 }
}
